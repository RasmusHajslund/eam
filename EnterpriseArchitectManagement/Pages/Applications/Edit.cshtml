@page
@model EnterpriseArchitectManagement.Pages.Applications.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Application.ID" />
            <div class="form-group">
                <label asp-for="Application.Name" class="control-label"></label>
                <input asp-for="Application.Name" class="form-control" />
                <span asp-validation-for="Application.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.AuditDate" class="control-label"></label>
                <input asp-for="Application.AuditDate" class="form-control" />
                <span asp-validation-for="Application.AuditDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.GoLiveDate" class="control-label"></label>
                <input asp-for="Application.GoLiveDate" class="form-control" />
                <span asp-validation-for="Application.GoLiveDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.EndOfLifeDate" class="control-label"></label>
                <input asp-for="Application.EndOfLifeDate" class="form-control" />
                <span asp-validation-for="Application.EndOfLifeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.Status" class="control-label"></label>
                <select asp-for="Application.Status" asp-items="Html.GetEnumSelectList<EnterpriseArchitectManagement.Models.Enums.ApplicationStatus>()">
                    <option selected="selected" value="">Please select</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Application.Description" class="control-label"></label>
                <input asp-for="Application.Description" class="form-control" />
                <span asp-validation-for="Application.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
